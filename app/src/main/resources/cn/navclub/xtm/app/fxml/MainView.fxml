<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Circle?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" prefHeight="550" prefWidth="800">
    <left>
        <VBox styleClass="nav-box">
            <Label text="朝天椒远程控制"/>
            <ListView fx:id="listView" VBox.vgrow="ALWAYS"/>
            <HBox styleClass="status-box">
                <Circle fx:id="sDot" strokeWidth="20"/>
                <Label fx:id="sLabel"/>
            </HBox>
        </VBox>
    </left>
    <center>
        <BorderPane styleClass="content-box" fx:id="contentPane"/>
    </center>
</BorderPane>
